<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="@dimen/list_item_horizontal_margin"
    android:paddingTop="@dimen/list_item_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proposal_author"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proposal_description"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:paddingBottom="8dp"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proposal_rating"
        android:layout_row="2"
        android:layout_column="0"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proposal_comments"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="0"
        android:layout_gravity="end" />
</GridLayout>